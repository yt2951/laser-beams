{
    "name": "simple-swoole/skeleton",
    "type": "project",
    "description": "A simple, lightweight and high-performance PHP coroutine framework.",
    "keywords": [
        "php",
        "swoole",
        "coroutine",
        "simple",
        "simps"
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.1",
        "ext-swoole": ">=4.4",
        "simple-swoole/simps": "~1.0.0",
        "simple-swoole/db": "~1.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/simps.php"
    ],
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "swoole/ide-helper": "@dev",
        "vimeo/psalm": "^4.17",
        "darkghosthunter/preloader": "^2.2",
        "phpunit/phpunit": "^9.5",
        "fakerphp/faker": "^1.17"
    }
}
